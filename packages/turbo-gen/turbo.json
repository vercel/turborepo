{
  "$schema": "../../docs/public/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:embed": {
      "outputs": ["src/templates/embedded.ts"],
      "inputs": ["src/templates/simple-ts/**", "src/templates/simple-js/**"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "build": {
      "dependsOn": ["^build", "build:embed"],
      "outputs": ["dist/**", "bin/**"]
    }
  }
}
