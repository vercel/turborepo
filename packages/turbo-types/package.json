{
  "name": "@turbo/types",
  "version": "2.5.7-canary.0",
  "type": "module",
  "description": "Turborepo types",
  "homepage": "https://turborepo.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vercel/turborepo.git",
    "directory": "packages/turbo-types"
  },
  "bugs": {
    "url": "https://github.com/vercel/turborepo/issues"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "zshy": "./src/index.ts",
  "scripts": {
    "build": "zshy && pnpm generate-schema",
    "lint": "eslint src/",
    "lint:prettier": "prettier -c . --cache",
    "generate-schema": "tsx scripts/generate-schema.ts",
    "copy-schema": "cp schemas/schema.json ../turbo/schema.json",
    "package:lint": "publint --strict",
    "package:types": "attw --profile node16 --pack --ignore-rules=false-cjs"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@turbo/eslint-config": "workspace:*",
    "@turbo/tsconfig": "workspace:*",
    "@types/node": "^20",
    "publint": "^0.3.12",
    "ts-json-schema-generator": "2.3.0",
    "tsx": "4.19.1",
    "zshy": "^0.4.1"
  },
  "files": [
    "dist",
    "schemas"
  ],
  "publishConfig": {
    "access": "public"
  }
}
