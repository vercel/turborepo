{
  "extends": "@turbo/tsconfig/library.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/cjs",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": false
  }
}