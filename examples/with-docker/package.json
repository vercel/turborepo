{
  "name": "with-docker",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "docker:network": "docker network inspect app_network >/dev/null 2>&1 || docker network create app_network",
    "docker:up": "docker-compose -f docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker-compose.yml down",
    "use-pnpm-dockerfile": "node scripts/use-dockerfile.js pnpm",
    "use-npm-dockerfile": "node scripts/use-dockerfile.js npm",
    "use-yarn-dockerfile": "node scripts/use-dockerfile.js yarn"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "2.5.0"
  },
  "packageManager": "yarn@3.7.0",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}
