{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {},
    "test": {
      "cache": false,
      "inputs": ["**/*.test.ts", "**/*.test.tsx", "vitest.config.ts"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
