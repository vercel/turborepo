{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},

	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"formatWithErrors": true
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,

			"correctness": {
				"noUnusedFunctionParameters": "off"
			},
			"a11y": {
				"useButtonType": "off"
			}
		}
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	}
}
