{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"],
      "cache": true,
      "persistent": false
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false
    }
  }
}
