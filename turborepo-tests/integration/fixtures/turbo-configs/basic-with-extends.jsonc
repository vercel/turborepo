{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "globalDependencies": ["tsconfig.json"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"],
      "cache": true,
      "persistent": false
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false
    }
  }
}
