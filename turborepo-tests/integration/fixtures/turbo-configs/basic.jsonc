{
  "$schema": "https://turbo.build/schema.json",
  // This is a comment in turbo.jsonc
  "globalDependencies": [
    "tsconfig.json" // Global dependency
  ],
  "globalEnv": [
    "NODE_ENV" // Environment variable
  ],
  "pipeline": {
    // Build task with comments
    "build": {
      "dependsOn": [
        "^build" // This is a topological dependency
      ],
      "outputs": [".next/**" /* Multiple outputs */, "dist/**"],
      // Task configuration
      "cache": true,
      "persistent": false
    },
    // Test task with comments
    "test": {
      "dependsOn": ["build"], // Depends on build
      "outputs": [], // No outputs
      /*
       * Multi-line comment with special characters:
       * "quotes", 'single quotes', [brackets], {braces}
       */
      "cache": false // Don't cache tests
    }
  }
}
