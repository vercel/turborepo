{
  "$schema": "./docs/public/schema.json",
  "baseBranch": "origin/main",
  "outputLogs": "full",
  "pipeline": {
    "test": {
      "outputs": ["coverage/**/*"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "build": {
      "outputs": ["dist/**/*", ".next/**/*"],
      "dependsOn": ["^build"]
    },
    "cli#build": {
      "outputs": ["turbo", "turbo.exe"],
      "dependsOn": []
    },
    "schema": {
      "outputs": ["public/schema.json"]
    },
    "create-turbo#test": {
      "dependsOn": ["create-turbo#build"],
      "outputs": []
    },
    "docs#build": {
      "outputs": [".next/**"],
      "dependsOn": ["^build", "docs#schema"]
    },
    "//#run-example": {
      "outputs": [],
      "inputs": [
        "examples/**/*.ts",
        "examples/**/*.tsx",
        "examples/**/*.json",
        "examples/**/*.js",
        "examples/**/*.yaml",
        "cli/**/*.go",
        "./scripts/run-example.sh"
      ],
      "dependsOn": []
    }
  }
}
