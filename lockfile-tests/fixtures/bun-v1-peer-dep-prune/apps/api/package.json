{
  "name": "maxmove-backend",
  "version": "0.1.0",
  "description": "Maxmove logistics platform backend",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --packages=external",
    "start": "bun run src/index.ts",
    "dev": "NODE_ENV=development PORT=3001 bun --watch src/index.ts",
    "lint": "eslint . --no-error-on-unmatched-pattern",
    "test": "bun test",
    "db:generate": "kysely-codegen --config-file kysely.config.ts",
    "db:types": "node scripts/db-types.cjs",
    "db:watch": "kysely-codegen --config-file kysely.config.ts --watch",
    "db:studio": "kysely-codegen --config-file kysely.config.ts --verify",
    "type-check:watch": "tsc --noEmit --watch",
    "railway:deploy": "railway deploy",
    "rds:test": "psql \"$DATABASE_URL\" -c \"SELECT version(), PostGIS_Version();\"",
    "rds:tables": "psql \"$DATABASE_URL\" -c \"\\dt\"",
    "migrate:create": "node scripts/migrate.cjs create",
    "migrate:up": "node scripts/migrate.cjs up",
    "migrate:up:all": "node scripts/migrate-up-all.cjs",
    "migrate:down": "node scripts/migrate.cjs down",
    "migrate:verify": "bun node scripts/inspect-schema.ts",
    "migrate:production": "echo 'Production migrations handled via CI/CD'",
    "import:vehicles": "bun run scripts/import-vehicle-types.ts"
  },
  "dependencies": {
    "@better-auth/expo": "catalog:",
    "@elysiajs/cors": "1.4.0",
    "@elysiajs/eden": "1.4.5",
    "@elysiajs/openapi": "1.4.11",
    "@maxmove/auth-config": "workspace:*",
    "@maxmove/domain-schemas": "workspace:*",
    "@maxmove/i18n": "workspace:*",
    "@maxmove/utils": "workspace:*",
    "@opentelemetry/api": "1.9.0",
    "@sentry/bun": "^10.5.0",
    "@sinclair/typebox": "^0.34.41",
    "@types/pg": "^8.15.5",
    "better-auth": "catalog:",
    "dotenv": "^16.4.5",
    "elysia": "catalog:",
    "kysely": "^0.28.5",
    "kysely-postgres-js": "3.0.0",
    "nats": "^2.17.0",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "postgres": "3.4.7",
    "postgres-interval": "4.0.2",
    "resend": "^6.0.1",
    "heic-convert": "^2.1.0",
    "twilio": "^5.8.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/heic-convert": "^2.1.0",
    "@types/pdfkit": "^0.17.4",
    "bun-types": "catalog:",
    "eslint": "catalog:",
    "kysely-codegen": "^0.18.5",
    "kysely-migration-cli": "^0.4.2",
    "pino-pretty": "^13.1.2",
    "typescript-config": "workspace:*"
  },
  "engines": {
    "bun": ">=1.2.0"
  }
}
