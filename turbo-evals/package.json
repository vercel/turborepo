{
  "name": "turbo-evals",
  "description": "Evaluates Turborepo configuration and usage against popular AI models",
  "private": true,
  "type": "module",
  "scripts": {
    "eval": "bun cli.ts",
    "eval:all": "bun cli.ts --all",
    "eval:create": "bun cli.ts --create",
    "eval:dry": "bun cli.ts --dry",
    "test": "bun test lib/",
    "clean": "find evals -name 'output-dry' -type d -exec rm -rf {} + 2>/dev/null || true && rm -rf evals/.shared 2>/dev/null || true",
    "prepare": "husky"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/openai": "^1.3.23",
    "@ai-sdk/openai-compatible": "^0.2.16",
    "@ai-sdk/react": "^1.2.12",
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@vercel/blob": "^2.0.0",
    "ai": "^5.0.11",
    "braintrust": "^0.0.201",
    "zod": "^3.24.1"
  },
  "packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3a253bde65a505ec7c5f9403ece5cc3cd37dcf2531",
  "bun": {
    "test": {
      "exclude": [
        "evals/**/*"
      ]
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^22.16.4",
    "husky": "^9.1.7",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.56.0",
    "pngjs": "^7.0.0"
  }
}
